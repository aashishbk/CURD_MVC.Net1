@model MVCCRUD.Models.Product

@{
}

<h1>Edit Product</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Color</label>
        <input type="text" class="form-control" asp-for="Color">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Price</label>
        <input type="int" class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Image</label>
        <input type="text" class="form-control" asp-for="Image">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">CategoryId</label>
        <input type="text" class="form-control" asp-for="CategoryId">
    </div>

    <button type="submit" class="btn btn-primary"asp-action="">Submit</button>
    <button type="submit" class="btn btn-danger"asp-action="Delete" asp-controller="Products">Delete</button>
</form>
